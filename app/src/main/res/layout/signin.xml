<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2D3237"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/login_cover"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_cover" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_cover"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/baloo"
        android:text="Bring music to your life"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login_cover" />

    <TextView
        android:id="@+id/text_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Welcome"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="15dp"
        android:text="Continue with"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Welcome" />


    <Button
        android:id="@+id/google_signin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_rounded_eerieblack"
        android:drawableStart="@drawable/googleg_disabled_color_18"
        android:drawablePadding="0dp"
        android:fontFamily="@font/baloo"
        android:orientation="horizontal"
        android:text="Google"
        android:textColor="#FF8552"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_signin" />

    <Button
        android:id="@+id/phone_login_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/google_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_eerieblack"
        android:drawableStart="@drawable/common_full_open_on_phone"
        android:drawablePadding="0dp"
        android:fontFamily="@font/baloo"
        android:orientation="horizontal"
        android:text="Phone Number"
        android:textColor="#FF8552"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_signin" />

</androidx.constraintlayout.widget.ConstraintLayout>